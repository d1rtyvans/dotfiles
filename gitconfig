[push]
  default = simple
[alias]
  can = commit --amend --no-edit
  co  = checkout
  fp  = push -f
  pd  = pull
  pu  = push origin -u HEAD
  reb = rebase
  rc  = rebase --continue
  rbp = rebase origin/production
  sla = log --oneline --decorate --graph --all -20

  unstage = reset HEAD
  uncommit = reset HEAD~1

